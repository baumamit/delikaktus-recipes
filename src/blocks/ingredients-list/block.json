{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "delikaktus-recipes/ingredients-list",
    "version": "0.1.0",
    "title": "Recipe Ingredients List",
    "category": "widgets",
    "description": "Dynamic ingredients list for recipe posts, created by the DELIKAKTUS.com team.",
    "textdomain": "delikaktus-recipes",
    "attributes": {
        "unitSystem": { "type": "string", "default": "metric" },
        "ingredients": {
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "properties": {
                    "unitType": { "type": "string", "default": "mass" },
                    "quantity": { "type": "number", "default": 1 },
                    "quantityFraction": { "type": "number", "default": 0 },
                    "unitChoice": { "type": "string", "default": "g" },
                    "name": { "type": "string", "default": "" }
                }
            }
        },
        "portionsMode": { "type": "boolean", "default": true },
        "portionsAmount": { "type": "number", "default": 1 }
    },
    "supports": {
        "html": false
    },
    "example": {},
    "editorScript": "file:./assets/js/delikaktus-recipes-ingredients-list-edit.js",
    "editorStyle": "file:./assets/css/delikaktus-recipes-ingredients-list-edit.css",
    "style": "file:./delikaktus-recipes-ingredients-list-index.css",
    "render": "file:./php/delikaktus-recipes-ingredients-list-render.php",
    "viewScript": "file:./assets/js/delikaktus-recipes-ingredients-list-view.js",
    "viewStyle": "file:./assets/css/delikaktus-recipes-ingredients-list-view.css"
}